<UserControl x:Class="SmartFoodChoiceApp.UserControlOverzicht"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartFoodChoiceApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="GridMain" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="524" Width="1010" Background="White" RenderTransformOrigin="0.511,0.519">

        <DataGrid Name="dgOverzicht" IsReadOnly="True" AutoGenerateColumns="False" Margin="260,197,35,31" SelectionChanged="DataGrid_SelectionChanged" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Smiley" Binding="{Binding Smiley}" />
                <DataGridTextColumn Header="Datum en tijd" Binding="{Binding Datum_Tijd, StringFormat=\{0:dd.MM.yy HH:mm:ss\}}"/>
                <DataGridTextColumn Header="Productnaam" Binding="{Binding Productnaam.Voornaam}"/>
                <DataGridTextColumn Header="CO-2 uitstoot" Binding="{Binding CO-2_uitstoot}"/>
            </DataGrid.Columns>
        </DataGrid>



    </Grid>

</UserControl>
