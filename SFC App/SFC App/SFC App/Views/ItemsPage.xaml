                                    <Label VerticalOptions="Center" Text="kip" HorizontalOptions="Center" FontSize="Medium"></Label>
                                </StackLayout>
                            </Frame>



                            <Frame IsClippedToBounds="True" Grid.Row="4" Grid.Column="0" HasShadow="True" Padding="0" BackgroundColor="White" Margin="10" CornerRadius="10">
                                <StackLayout>
                                    <BoxView VerticalOptions="Center" HeightRequest="90" WidthRequest="6"></BoxView>
                                    <Image  Source="{ local:ImageResource SFC_App.Images.lasagne.jpg}" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="100" WidthRequest="100"></Image>
                                    <Label VerticalOptions="Center" Text="lasagne" HorizontalOptions="Center" FontSize="Medium"></Label>
                                </StackLayout>
                            </Frame>



                            <Frame IsClippedToBounds="True" Grid.Row="4" Grid.Column="1" HasShadow="True" Padding="0" BackgroundColor="White" Margin="10" CornerRadius="10">
                                <StackLayout>
                                    <BoxView VerticalOptions="Center" HeightRequest="90" WidthRequest="6"></BoxView>
                                    <Image  Source="{ local:ImageResource SFC_App.Images.kiwi.jpg}" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="100" WidthRequest="100"></Image>
                                    <Label VerticalOptions="Center" Text="kiwi" HorizontalOptions="Center" FontSize="Medium"></Label>
                                </StackLayout>
                            </Frame>
                            <Frame IsClippedToBounds="True" Grid.Row="5" Grid.Column="0" HasShadow="True" Padding="0" BackgroundColor="White" Margin="10" CornerRadius="10">
                                <StackLayout>
                                    <BoxView VerticalOptions="Center" HeightRequest="90" WidthRequest="6"></BoxView>
                                    <Image  Source="{ local:ImageResource SFC_App.Images.paprika.png}" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="100" WidthRequest="100"></Image>
                                    <Label VerticalOptions="Center" Text="paprika" HorizontalOptions="Center" FontSize="Medium"></Label>
                                </StackLayout>
                            </Frame>



                            <Frame IsClippedToBounds="True" Grid.Row="5" Grid.Column="1" HasShadow="True" Padding="0" BackgroundColor="White" Margin="10" CornerRadius="10">
                                <StackLayout>
                                    <BoxView VerticalOptions="Center" HeightRequest="90" WidthRequest="6"></BoxView>
                                    <Image  Source="{ local:ImageResource SFC_App.Images.piza.jpg}" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="100" WidthRequest="100"></Image>
                                    <Label VerticalOptions="Center" Text="pizza" HorizontalOptions="Center" FontSize="Medium"></Label>
                                </StackLayout>
                            </Frame>



                            <Frame IsClippedToBounds="True" Grid.Row="6" Grid.Column="0" HasShadow="True" Padding="0" BackgroundColor="White" Margin="10" CornerRadius="10">
                                <StackLayout>
                                    <BoxView VerticalOptions="Center" HeightRequest="90" WidthRequest="6"></BoxView>
                                    <Image  Source="{ local:ImageResource SFC_App.Images.snicker.png}" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="100" WidthRequest="100"></Image>
                                    <Label VerticalOptions="Center" Text="snickers" HorizontalOptions="Center" FontSize="Medium"></Label>
                                </StackLayout>
                            </Frame>



                            <Frame IsClippedToBounds="True" Grid.Row="6" Grid.Column="1" HasShadow="True" Padding="0" BackgroundColor="White" Margin="10" CornerRadius="10">
                                <StackLayout>
                                    <BoxView VerticalOptions="Center" HeightRequest="90" WidthRequest="6"></BoxView>
                                    <Image  Source="{ local:ImageResource SFC_App.Images.sushi.png}" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="100" WidthRequest="100"></Image>
                                    <Label VerticalOptions="Center" Text="sushi" HorizontalOptions="Center" FontSize="Medium"></Label>
                                </StackLayout>



                            </Frame>



                            <Frame IsClippedToBounds="True" Grid.Row="7" Grid.Column="0" HasShadow="True" Padding="0" BackgroundColor="White" Margin="10" CornerRadius="10">
                                <StackLayout>
                                    <BoxView VerticalOptions="Center" HeightRequest="90" WidthRequest="6"></BoxView>
                                    <Image  Source="{ local:ImageResource SFC_App.Images.twix-bar1.jpg}" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="100" WidthRequest="100"></Image>
                                    <Label VerticalOptions="Center" Text="twix" HorizontalOptions="Center" FontSize="Medium"></Label>
                                </StackLayout>



                            </Frame>



                            <Frame IsClippedToBounds="True" Grid.Row="7" Grid.Column="1" HasShadow="True" Padding="0" BackgroundColor="White" Margin="10" CornerRadius="10">
                                <StackLayout>
                                    <BoxView VerticalOptions="Center" HeightRequest="90" WidthRequest="6"></BoxView>
                                    <Image  Source="{ local:ImageResource SFC_App.Images.tomaat.png}" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="100" WidthRequest="100"></Image>
                                    <Label VerticalOptions="Center" Text="tomaat" HorizontalOptions="Center" FontSize="Medium"></Label>
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </ViewCell>
                </DataTemplate>



            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>